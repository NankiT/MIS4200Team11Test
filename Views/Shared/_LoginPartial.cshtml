@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
        
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <button class="btn btn-warning dropdown-toggle" style="margin-top:8px;" type="button" data-toggle="dropdown">
                Recognition <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Give A Recognition", "Create", "recognitions")</li>
                <li>@Html.ActionLink("Recent Recognitions", "Index", "recognitions")</li>
            </ul>
        </li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
                Employees <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Employee Directory", "Index", "UserDatas")</li>
                <li>@Html.ActionLink("Leaderboard", "Leaderboard", "UserDatas")</li>
            </ul>
        </li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
                @User.Identity.GetUserName() <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("My Account", "Details", "UserDatas", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { title = "Manage" })</li>
                <li>@Html.ActionLink("Edit User Details", "Edit", "UserDatas", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { title = "Profile" })</li>       
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </li>
        
        
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
